<Window x:Class="InstrumentExpertSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InstrumentExpertSystem"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.DataContext>
        <local:MainWindowViewModel />
    </Window.DataContext>
    <Grid>
        <Button x:Name="LoadKnowledgeBase" Content="Load Knowledge Base" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="142" Command="{Binding LoadKnowledgeBase}" />
        <ListBox x:Name="knowledgeBaseInstruments" HorizontalAlignment="Left" Height="110" Margin="198,10,0,0" VerticalAlignment="Top" Width="240" />
        <TextBox x:Name="knowledgeBaseInstrumentsCount" HorizontalAlignment="Left" Height="47" Margin="443,16,0,0" TextWrapping="Wrap" Text="{Binding KnowledgeBaseInstrumentsCount}" VerticalAlignment="Top" Width="49"/>

    </Grid>
</Window>
